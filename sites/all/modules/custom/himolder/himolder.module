EOM;
      return array('#markup' => $html);
    default:
      $name = str_replace('group_small_logo_', '', $which_block);
      $img = '/img/' . $name . '.png';
      $path = 'group/' . str_replace(array(' ',','), array('-',''), strtolower($title));
      if (false) {
        $html = <<<EOM
<div style="position: relative;">
